<h2>Definition: <%= @definition.definition %></h2>
<h3>Term: <%= @definition.term.term %></h3>

<form action="/terms/<%= @definition.term.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="definition">Redefine</label>
  <input id="definition" name="definition" type="text">

  <button type="submit">Update definition</button>
</form>

<form action="/terms/<%= @definition.term.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete definition</button>
</form>

<a href="/terms/<%= @definition.term.id %>">Back to <%= @definition.term.term %></a>
